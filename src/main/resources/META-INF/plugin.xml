<idea-plugin>
    <id>net.afpro.idea.aophelper</id>
    <name>Aop Helper</name>
    <vendor email="admin@afpro.net" url="https://afpro.net">afpro</vendor>

    <description><![CDATA[
    Aop helper.<br>
    Include type hint in aop annotation and aop modified method tag.<br>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--psi.referenceContributor-->
        <!--completion.contributor-->
        <!--codeInsight.lineMarkerProvider-->

        <codeInsight.lineMarkerProvider
                language="JAVA"
                implementationClass="net.afpro.idea.aophelper.lancet.LancetJavaAopSourceLineMarkerProvider"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>