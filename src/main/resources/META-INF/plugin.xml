<idea-plugin>
    <id>net.afpro.idea.lancet</id>
    <name>Lancet Helper</name>
    <vendor email="admin@afpro.net" url="https://afpro.net">afpro</vendor>

    <description><![CDATA[
    Lancet helper.<br>
    Include type hint in annotation and lancet modified method tag.<br>
    ]]></description>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor implementation="net.afpro.idea.lancet.LancetReferenceContributor"/>
        <completion.contributor language="JAVA"
                                implementationClass="net.afpro.idea.lancet.LancetJavaCompletionContributor"/>
        <completion.contributor language="kotlin"
                                implementationClass="net.afpro.idea.lancet.LancetKotlinCompletionContributor"/>
        <runLineMarkerContributor language="JAVA"
                                  implementationClass="net.afpro.idea.lancet.LancetJavaRunLineMarkerContributor"/>
        <runLineMarkerContributor language="kotlin"
                                  implementationClass="net.afpro.idea.lancet.LancetKotlinRunLineMarkerContributor"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>